---
layout: base
---

<article>
  <h2>{{title}}</h2>
  <abbr title="{{page.date}}">utc: {{ page.date | readableDate }}</abbr>
  <abbr title="{{page.date}}">local: {{page.date | localDateTime }}</abbr>
  <abbr title="{{page.date}}">relative: {{page.date | relativeDate }}</abbr>

  {{ content | fixTypography | safe }}
</article>

<hr />

<div class="post-navigation">
{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}

<div>
  Next: 
  {% if nextPost %}
    <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
  {% else %}
    <em>none</em>
  {% endif %}
</div>

<a href="/writing">All Posts</a>

<div>
  Previous:
{% if previousPost %}
   <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
{% else %}
  <em>none</em>
{% endif %}
</div>

</div>

<hr />