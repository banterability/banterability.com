---
layout: base
---

<article>
  <h2>{{title}}</h2>
  <ul>
  <li><abbr title="{{page.date}}">dateToRfc3339: {{ page.date | dateToRfc3339 }}</abbr></li>
  <li><abbr title="{{page.date}}">localDateTime: {{ page.date | localDateTime }}</abbr></li>
  <li><abbr title="{{page.date}}">monthDay: {{ page.date | monthDay }}</abbr></li>
  <li><abbr title="{{page.date}}">readableDate: {{ page.date | readableDate }}</abbr></li>
  <li><abbr title="{{page.date}}">relativeDate: {{ page.date | relativeDate }}</abbr></li>
  </ul>
  
</article>

<hr />

<div class="post-navigation">
{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}

<div>
  Next: 
  {% if nextPost %}
    <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
  {% else %}
    <em>none</em>
  {% endif %}
</div>

<a href="/writing">All Posts</a>

<div>
  Previous:
{% if previousPost %}
   <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
{% else %}
  <em>none</em>
{% endif %}
</div>

</div>

<hr />